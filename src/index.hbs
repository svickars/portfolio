<!DOCTYPE html>
<html lang="en-US" class="no-js no-svg">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Sam Vickars</title>

  <meta name="description" content="Information artist, graphic designer, story teller." />

  <!-- Twitter Card data -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@samvickars">
  <meta name="twitter:creator" content="@samvickars">
  <meta name="twitter:title" content="Sam Vickars">
  <meta name="twitter:description" content="Hi, I’m Sam. I like to tell visual stories using data, graphics, and interactivity.">
  <meta name="twitter:image" content="http://samvickars.is/img/featured/draftingbig.gif">

  <!-- Open Graph data -->
  <meta property="og:title" content="Sam Vickars" />
  <meta property="og:type" content="article" />
  <meta property="og:url" content="http://samvickars.is/" />
  <meta property="og:image" content="http://samvickars.is/img/featured/draftingbig.gif" />
  <meta property="og:description" content="Hi, I’m Sam. I like to tell visual stories using data, graphics, and interactivity." />
  <meta property="og:site_name" content="Sam Vickars" />

  <link rel="stylesheet" href="assets/fonts/fonts.css">

  <!-- build:css css/bundle.min.css -->
  <link rel="stylesheet" href="css/base.css">
  <link rel="stylesheet" href="css/layout.css">
  <link rel="stylesheet" href="css/text.css">
  <!--  endbuild -->

  <script>
    (function(i, s, o, g, r, a, m) {
      i['GoogleAnalyticsObject'] = r;
      i[r] = i[r] || function() {
        (i[r].q = i[r].q || []).push(arguments)
      }, i[r].l = 1 * new Date();
      a = s.createElement(o),
        m = s.getElementsByTagName(o)[0];
      a.async = 1;
      a.src = g;
      m.parentNode.insertBefore(a, m)
    })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-72865926-2', 'auto');
    ga('send', 'pageview');
  </script>

</head>

<body>
  <div class="main">
    <div class="content">

      <section class="intro">
        <h1>{{{copy.headline}}}</h1>
        {{#each copy.intro}}
				    <p>{{{value}}}</p>
			  {{/each}}

        {{#each copy.followup}}
      	   <p class="light bold">{{{value}}}</p>
      	{{/each}}

        <p class="light">{{{copy.endline}}}</p>
      </section>

      <section class="work">
        <h4><span class="headline">{{{copy.newstuffH4}}}</span></h4>
            {{#each copy.newstuff}}
              <a href="{{{this.url}}}" target="blank">
                <div class="project">
                  <div class="image" style="background: url('assets/img/feature/{{{this.image}}}'); background-size: cover; background-position: 50% 50%;"></div>
                  <div class="info">
                    <h2 style="color: {{{this.colour}}}">{{{this.project}}}</h2>
                    <h3>{{{this.description}}}</h3>
                    <h5>{{{this.tags}}}</h5>
                  </div>
                </div>
              </a>
            {{/each}}
      </section>

      <section class="work">
        <h4><span class="headline">{{{copy.oldstuffH4}}}</span></h4>
        {{#each copy.oldstuff}}
          <a href="{{{this.url}}}" target="blank">
            <div class="project">
              <div class="image" style="background: url('assets/img/feature/{{{this.image}}}'); background-size: cover; background-position: 50% 50%;"></div>
              <div class="info">
                <h2 style="color: {{{this.colour}}}">{{{this.project}}}</h2>
                <h3>{{{this.description}}}</h3>
                <h5>{{{this.tags}}}</h5>
              </div>
            </div>
          </a>
        {{/each}}
      </section>

      <section class="conclusion">
        <p>{{{copy.conclusion}}}</p>
      </section>
      
    </div>
    <footer>
      <div class="footer-left">
        <a href="http://twitter.com/samvickars">{{{copy.footer}}}</a>
      </div>
      <div class="footer-right">
        {{#each copy.footerlinks}}
            <a href="{{{this.link}}}">{{{this.text}}}</a>
        {{/each}}
      </div>
    </footer>
  </div>

</body>

</html>
